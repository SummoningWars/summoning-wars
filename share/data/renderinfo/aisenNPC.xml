<RenderInfo name = "guardPoleBase" parent="playerbaseM">
	<Action name="noaction">
		<Animation name="idlePole" />
	</Action>
	
	<Action name="die">
		<Animation name="die" />
	</Action>
	
	<Action name="walk">
		<Animation name="walkPole" />
	</Action>
	
	<Action name = "talk">
		<Animation name = "talkPole" />
	</Action>
	
	<Action name = "sad">
		<Animation name = "sadPole" />
	</Action>

	<Action name="holdItem">
		<Animation name="showItemPole"/>
	</Action>
	
	<Action name="magic_attack">
		<Animation name="attackMagicTwoHands" />
		<ParticleSystem objectname="magicEnergy" bone="mainmesh:itemRightHand" source="Magic_Arrow" position="0.0 0.0 -1.4" />
		<Detach time="0.4" objectname="magicEnergy" />
	</Action>
	
	<Action name="attack">
		<Animation name="attackPole" />
	</Action>
	
	<Action name="avaera_firebolt">
		<Animation name="castMagicWeak" />
		<ParticleSystem time = "0" objectname="magicEnergy" bone="mainmesh:itemLeftHand" source="Magic_Arrow" position="0.0 0.0 0.0" />
		<Detach time = "0.8" objectname = "magicEnergy"/>
	</Action>
	<Action name="avaera_fireball" reference="avaera_firebolt"/>
	<Action name="avaera_firecolumn">
		<Animation name="castMagicStrong" />
		<ParticleSystem time = "0" objectname="magicEnergy" bone="mainmesh:magicEffects" source="FireDown" position="0.0 0.0 0.0" />
		<Detach time = "0.9" objectname = "magicEnergy"/>
		<ParticleSystem time = "0.6" objectname="ring" bone="mainmesh:itemRightHand" source="Firering" position="0.0 0.0 2.0" />
		<Scale objectname="ring" start = "0.6" end = "0.7" start_val="1.0" end_val="2.5" />
		<Detach time = "0.7" objectname = "ring" />
	</Action>

	<Action name="council_pierce">
		<Animation name="attackTwoHands"/>
	</Action>
	
	<Action name="legion_whirl">
		<Animation name="sweepStrikeTwoHands" />
		<ParticleSystem time = "0.2" objectname="attackLine" bone="mainmesh:itemRightHand" source="SpecialAttackLineSweepStrike" position="0.0 0.0 -2.0" />
		<Detach time="0.4" objectname="attackLine" />
		<ParticleSystem time = "0.6" objectname="attackLine" bone="mainmesh:itemRightHand" source="SpecialAttackLineSweepStrike" position="0.0 0.0 -2.0" />
		<Detach time="0.75" objectname="attackLine" />
	</Action>
	
	<Action name="council_flamearmor">
		<Animation name = "swordMagic" />
		<ParticleSystem time = "0.2" objectname="fire1" source="BurningBlade" bone="itemRightHand" position= "0 0 -0.3"/>
		<Rotation objectname="fire1" start="0.2" end="0.2" start_vec="0.0 0.0 0.0" end_vec="0.0 180.0 0.0" />
		<ParticleSystem time = "0.3" objectname="fire2" source="BurningBlade" bone="itemRightHand" position= "0 0 -0.6"/>
		<Rotation objectname="fire2" start="0.3" end="0.3" start_vec="0.0 0.0 0.0" end_vec="0.0 180.0 0.0" />
		<ParticleSystem time = "0.4" objectname="fire3" source="BurningBlade" bone="itemRightHand" position= "0 0 -0.9"/>
		<Rotation objectname="fire3" start="0.4" end="0.4" start_vec="0.0 0.0 0.0" end_vec="0.0 180.0 0.0" />
		<ParticleSystem time = "0.5" objectname="fire4" source="BurningBlade" bone="itemRightHand" position= "0 0 -1.2"/>
		<Rotation objectname="fire4" start="0.5" end="0.5" start_vec="0.0 0.0 0.0" end_vec="0.0 180.0 0.0" />
		<Detach time = "1.0" objectname="fire1"/>
		<Detach time = "1.0" objectname="fire2"/>
		<Detach time = "1.0" objectname="fire3"/>
		<Detach time = "1.0" objectname="fire4"/>
	</Action>	
</RenderInfo>

